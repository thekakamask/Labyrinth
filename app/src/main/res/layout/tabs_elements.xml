<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/element_child_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/elements_child_checkbox"
        android:text="@string/header_example"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorButtonNormal"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/element_child_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/elements_child_checkbox"
        android:text="@string/description_example"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/element_child_title"
        android:textColor="?attr/colorSwitchThumbNormal" />

    <CheckBox
        android:id="@+id/elements_child_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>